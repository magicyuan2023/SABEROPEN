@using Juyou.Solution.Common;
@using Juyou.Solution.Model.Models
@using Juyou.Solution.Model;
@model UserInfo
@section Styles
{
<style>
    .location{
        text-align:left;
        padding-left:15px;
        padding-top:9px;
    }
</style>
}
@{ ViewData["Title"] = SystemSet.SystemName + "-Base Information";
                Layout = "~/Pages/_LayoutNone.cshtml"; }
<div style="text-align:center">
    <div class="layui-fluid">
        <div class="layui-row"><div class="cols-md"><span class="layui-form-label">Account：</span></div> <div class="layui-input-block location"><span class="location">@Model.UserName</span></div></div>
        <div class="layui-row"><div class="cols-md"><span class="layui-form-label">Nickname：</span></div> <div class="layui-input-block location"><span class="location">@Model.Name</span></div></div>
        <div class="layui-row"><div class="cols-md"><span class="layui-form-label">Email：</span></div> <div class="layui-input-block location"><span class="location">@Model.Email</span></div></div>
        <div class="layui-row"><div class="cols-md"><span class="layui-form-label">Region：</span></div> <div class="layui-input-block location"><span class="location"> @ViewBag.RegionName</span></div></div>
        <div class="layui-row"><div class="cols-md"><span class="layui-form-label">Register Date：</span></div> <div class="layui-input-block location"><span class="location">@Model.CreateTime.TryToUSDateString()</span></div></div>
    </div>
</div>

